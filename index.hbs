{{!< default}}

<header id="blog-header"{{#if @blog.cover}} class="has-cover"{{/if}}>
	<div class="hero">
		<h1 class="blog-name">
			<a href="{{@blog.url}}"><img src="{{asset "images/logo.png"}}" alt="Blog Logo" /></a>
		</h1>

		{{#if @blog.description}}
		<h2 class="blog-description">{{@blog.description}}</h2>
		{{/if}}
		{{#if @blog.cover}}
		<div class="blog-cover cover" style="background-image: url('{{@blog.cover}}');"></div>
		{{/if}}
	</div>
	<div class="inner">
		<nav id="navigation">
			{{#if @blog.navigation}}
			<span id="menu-button" class="nav-button">
				<a class="menu-button"><i class="ic ic-menu"></i> Menu</a>
			</span>
			{{/if}}
		</nav>
	</div>
</header>

<div id="index" class="container">

	<main class="content" role="main">
	
		{{> "loop"}}
	
	</main>

</div>